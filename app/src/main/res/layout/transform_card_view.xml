<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_220sdp"
    android:id="@+id/transform_card_view"
    android:background="@drawable/linear_layout_frame2"
   >
    <LinearLayout
        android:layout_margin="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView android:id="@+id/transform_info_image"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="@dimen/_8sdp"
            android:layout_weight="1.0"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:scaleType="centerInside"
            android:background="@drawable/button7"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:drawingCacheQuality="auto"
            android:duplicateParentState="false" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/transform_info_text"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginBottom="4dp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Echo 10"
            android:fontFamily="@font/calibri"
            android:textStyle="bold"
            android:textColor="@color/colorTextView"
            android:gravity="center"
            android:textSize="@dimen/_12sdp"
            android:background="@drawable/button8"
            android:maxWidth="@dimen/_120sdp"
            android:minWidth="@dimen/_80sdp"
            android:minHeight="@dimen/_30sdp"/>
    </LinearLayout>



</androidx.cardview.widget.CardView>